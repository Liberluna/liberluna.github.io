---
import { projects } from '../../../datas/projects.ts'
import Layout from '../../layouts/Layout.astro'

---
<Layout title="Projects | Liberluna">
  <div class="mx-10">
    <div class="text-3xl text-center mt-10 mb-10">Projects</div>
    <div class="grid grid-cols-1 gap-4">
      {
        projects.map( project => {
          return <div class="card card-side bg-base-100 shadow-xl my-5">
            <a href={project.link}>
              <div class="card-body">
                <h2 class="card-title">{project.title}</h2>
                <p>{project.desc}</p>
              </div>
            </a>
          </div>
        })
      }
    </div>
  </div>
</Layout>
